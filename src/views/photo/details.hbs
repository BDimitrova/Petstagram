<!-- Starts Main Section -->
<main>
    <div class="container">
        <div class="col-9">

            <!-- Start Pet Photo Post Section -->
            <div class="card">
                <div class="top">

                    <!-- Start User Details and Image Location Section -->
                    <div class="userDetails">

                        <!-- Link to User Profile Details Page-->
                        <div>
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="/static/images/person.png" alt="img8">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>

                            <!-- Link to User Profile Details Page -->
                            <p>
                                <!-- User's username -->
                                {{photoOwner.username}}
                            </p>
                            <!-- photo's location -->
                            <span>{{location}}</span>

                            <!-- IF the viewer is the creator of the photo -->
                            <div class="edit-delete-btns">
                                {{#if isOwner}}
                                <!-- Link to Edit Pet Photo Page -->
                                <a href="/photo/{{_id}}/edit">
                                    <img class="edit-img" src="/static/images/edit-pen-icon-6.jpg" alt="edit button">
                                </a>

                                <!-- Link to Delete Pet Photo Page -->
                                <a href="/photo/{{_id}}/delete">
                                    <img class="bin-img" src="/static/images/icon-remove-22.jpg" alt="bin button">
                                </a>
                                {{/if}}
                            </div>


                        </h3>
                    </div>

                </div>

                <!-- Start Pet Photo -->
                <div class="imgBx">
                    <!-- Pet Photo -->
                    <img src="{{imageUrl}}" alt="post" class="cover">
                </div>



                <div class="bottom">

                    <p class="message">
                        <b class="petDescription">{{description}}</b>
                    </p>


                    <!-- Photo description -->
                    <div class="pet-details">
                        <p class="petName">Name: {{name}}</p>
                        <p class="petAge">Age: {{age}}</p>
                    </div>

                    <div class="comments">
                        <div class="comment-top">
                            {{#each photoComment}}
                                {{> comment-layout}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{#if user}}
                {{#if isOwner}}

                {{else}}
                <div class="addComments">
                    <!-- Start Add Comments Form -->
                    <form method="POST" action="/photo/{{_id}}/comment">
                        <textarea id="comment-textarea" name="commentArea" cols="40" rows="10"
                            placeholder="Add comment..."></textarea>
                        <!-- Post Comments Button -->
                        <button type="submit">Post</button>
                    </form>
                </div>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</main>